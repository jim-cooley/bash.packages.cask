function fs-get-hash () {
  h="`$OPENSSL $1 $2`"
  printf "%s" "${h#*$' '}"
}

function fs-calc-hashes () {
  f="$1"
  echo "foo: $*"
  printf ",%s,%s\n" $md5=$(fs-get-hash $md5 \"$*\") $sh1=$(fs-get-hash $sh1 "$*")
}

#fs-calc-file-hashes $*

function generate_file_statistics () {
  $STAT $STOPTS "$*" 
  fs-calc-hashes "$*" 
}
